@model EcommerceProject.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title mb-4">Delete Product</h2>
                    <div class="alert alert-danger">
                        <h4>Are you sure you want to delete this product?</h4>
                        <p>This action cannot be undone.</p>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-4">
                            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded" />
                        </div>
                        <div class="col-md-8">
                            <dl class="row">
                                <dt class="col-sm-3">Name</dt>
                                <dd class="col-sm-9">@Model.Name</dd>

                                <dt class="col-sm-3">Category</dt>
                                <dd class="col-sm-9">@Model.Category.Name</dd>

                                <dt class="col-sm-3">Price</dt>
                                <dd class="col-sm-9">$@Model.Price.ToString("F2")</dd>

                                <dt class="col-sm-3">Stock</dt>
                                <dd class="col-sm-9">@Model.StockQuantity</dd>

                                <dt class="col-sm-3">Status</dt>
                                <dd class="col-sm-9">
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactive</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger">Delete Product</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 